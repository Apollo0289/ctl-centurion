<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render 'projects/job_menu' %>
    </div>
    <div class="col-md-12">
      <div class="ui-block shadow">
        <div class="ui-block-title">
          <h5>
            <div class="row">
              <div class="col-md-4">
                <div class="text-left">
                  <%= link_to "All Given Data", project_given_data_path, class: "btn btn-primary" %>
                </div>
              </div>
              <div class="col-md-4">
                <%=  @project.project_number %> - <%=  @project.name %>
              </div>
              <div class="col-md-4">
                <div class="text-right">
                  <%= link_to "Edit", edit_project_given_datum_path(@project,@given_datum), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </h5>
        </div>
        <div class="ui-block-content">
          <% if @given_datum.present? %>
            <div class="row pt-3">

              <div class="col-md-3 pl-5"><b class="card-title">File Type:</b></div>
              <div class="col-md-3"><%= @given_datum.file_type %></div>

              <div class="col-md-3 pl-5"><b class="card-title">Received Date: </b></div>
              <div class="col-md-3"><%= @given_datum.date.strftime('%Y-%m-%d') %></div>

              <div class="col-md-3 pl-5"><b class="card-title">Subject: </b></div>
              <div class="col-md-3">
                <%= @given_datum.subject %>
              </div>

              <div class="col-md-3 pl-5"><b class="card-title">To: </b></div>
              <div class="col-md-3">
                <%= @given_datum.to %>
              </div>

              <div class="col-md-3 pl-5"><b class="card-title">From: </b></div>
              <div class="col-md-3">
                <%= @given_datum.from %>
              </div>

              <div class="col-md-3 pl-5"><b class="card-title">Status: </b></div>
              <div class="col-md-3"><%= @given_datum.status ? 'Active' : 'In-active' %></div>

              <div class="col-md-3 pl-5"><b class="card-title">In/Out: </b></div>
              <div class="col-md-3">
                <%= @given_datum.in_or_out %>
              </div>

              <div class="col-md-12 pl-5 pt-4">
                <h4>Description:</h4>
                <p class="card-text"><%= simple_format(@given_datum.description) %></p>
              </div>
            </div>
          <% else %>
            There is no Given Data
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
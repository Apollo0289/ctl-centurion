<div class="container pb-4">
  <div class="row">
    <div class="col-md-12">
      <div class="ui-block shadow">
        <div class="ui-block-title">
          <h5>
            <div class="row">
              <div class="col-md-6">
                <div class="text-left">
                  <%= link_to clients_path, class: 'btn btn-primary' do %>
                    Back
                  <% end %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="text-right">
                  <%= link_to "Edit", edit_client_path(@client), class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          </h5>
        </div>
        <div class="ui-block-content">
          <% if @client.present? %>
            <div class="row pt-3">

              <div class="col-md-3"><h5 class="card-title">Instrument Name: </h5></div>
              <div class="col-md-3"><%= @client.name %></div>

              <div class="col-md-3"><h5 class="card-title">ABN: </h5></div>
              <div class="col-md-3"><%= @client.abn %></div>

              <div class="col-md-3"><h5 class="card-title">Client Code: </h5></div>
              <div class="col-md-3"><%= @client.client_code %></div>

              <div class="col-md-3"><h5 class="card-title">Unique Id: </h5></div>
              <div class="col-md-3"><%= @client.unique_id %></div>

              <div class="col-md-3"><h5 class="card-title">Contact Email: </h5></div>
              <div class="col-md-3"><%= @client.accounts_contact_email %></div>

              <div class="col-md-3"><h5 class="card-title">Address: </h5></div>
              <div class="col-md-3"><%= @client.address %></div>


            </div>
          <% else %>
            No Record Found
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= form_with(model: client, local: true) do |form| %>

  <%= render 'form_fields', form: form %>

  <div class="form-group">
    <% if client.persisted? %>
      <div class="float-right">
        <%= link_to 'Delete', client, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

      <% if client.persisted? %>
        <%= link_to "Cancel", client, class: "btn btn-link" %>
      <% else %>
        <%= link_to "Cancel", clients_path, class: "btn btn-link" %>
      <% end %>
  </div>
<% end %>

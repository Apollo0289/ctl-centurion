<%= form_with model: [@project, @note] do |f| %>

  <div class="form-group">
    <%= f.text_field :item, autofocus: true, class: 'form-control', placeholder: "Item Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_area :instructions, :cols => 10, :rows => 5, autofocus: false, class: 'form-control', placeholder: "Details", required: true  %>
  </div>

  <div class="form-group">
    <%= f.number_field :index, autofocus: true, min: '0', class: 'form-control', placeholder: "Index" , required: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary btn-block btn-lg" %>
  </div>
  <% if @note.persisted? %>
    <div class="text-center">
      <%= link_to "Cancel", project_notes_path(@project,@note), class: "btn btn-link" %>
    </div>
  <% else %>
    <div class="text-center">
      <%= link_to "Cancel", project_notes_path(@project), class: "btn btn-link" %>
    </div>
  <% end %>
<% end %>

<div class="container pb-4">
  <div class="row">
    <div class="col-md-12">
      <%= render 'surveyors/settings_menu' %>
    </div>
    <div class="col-md-12">
      <div class="ui-block shadow">
        <div class="ui-block-title">
          <h5>
            <div class="row">
              <div class="col-md-6">
                <div class="text-left">
                  <%= link_to survey_controllers_path, class: 'btn btn-primary' do %>
                    All Controllers
                  <% end %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="text-right">
                  <%= link_to "Edit", edit_survey_controller_path(@survey_controller), class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          </h5>
        </div>
        <div class="ui-block-content">
          <% if @survey_controller.present? %>
            <div class="row pt-3">

              <div class="col-md-3"><b class="card-title">Two Digit Id: </b></div>
              <div class="col-md-3"><%= @survey_controller.two_digit_id %></div>

              <div class="col-md-3"><b class="card-title">Name: </b></div>
              <div class="col-md-3"><%= @survey_controller.name %></div>

              <div class="col-md-3"><b class="card-title">Controller Type: </b></div>
              <div class="col-md-3"><%= @survey_controller.controller_type %></div>

              <div class="col-md-3"><b class="card-title">Serial Number: </b></div>
              <div class="col-md-3"><%= @survey_controller.serial_number %></div>

              <div class="col-md-3"><b class="card-title">Software Version: </b></div>
              <div class="col-md-3"><%= @survey_controller.software_version %></div>

              <div class="col-md-3"><b class="card-title">Controller Login: </b></div>
              <div class="col-md-3"><%= @survey_controller.controller_login %></div>
            </div>
          <% else %>
            No Controller Found
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
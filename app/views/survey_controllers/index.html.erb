<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render 'surveyors/settings_menu' %>
    </div>
    <div class="col-md-12">
      <div class="ui-block shadow">
        <div class="ui-block-title">
          <h2>
            <div class="row">
              <div class="col-md-6">
                Controllers
              </div>
              <div class="col-md-6">
                <div class="text-right">
                  <%= link_to new_survey_controller_path, class: 'btn btn-primary' do %>
                    Add
                  <% end %>
                </div>
              </div>
            </div>
          </h2>
        </div>
        <div class="ui-block-content">
          <div class="row">
            <div class="col-md-12">
              <div class="panel panel-primary">
                <% if @survey_controllers.present? %>
                  <table id="dttb" class="table table-hover">
                    <thead>
                    <tr>
                      <th>Two Digit Id</th>
                      <th>Name</th>
                      <th>Controller Type</th>
                      <th>Serial Number</th>
                      <th class="pl-5 text-center pr-5">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @survey_controllers.each do |survey_controller|%>
                      <tr>
                        <td><%= survey_controller.two_digit_id %></td>
                        <td><%= survey_controller.name %></td>
                        <td><%= survey_controller.controller_type %></td>
                        <td><%= survey_controller.serial_number %></td>
                        <td class="pl-5 text-center pr-5">
                          <div class="pl-1">
                            <%= link_to survey_controller_path(id: survey_controller.id), title: 'View' do %>
                              <i class="fa fa-list  m-1" style="font-size:19px; color: black; aria-hidden:true"></i>
                            <% end %>
                            <%= link_to edit_survey_controller_path(id: survey_controller.id), title: 'Edit' do %>
                              <i class="fa edit m-1" style="font-size:19px; color: black; aria-hidden:true">&#xf044;</i>
                            <% end %>
                            <%= link_to survey_controller_path(id: survey_controller.id), method: :delete, data: {confirm: 'Do you really want to delete this Controller?', commit: 'Delete!'}, title: 'Delete' do %>
                              <i class="fa fa-trash m-1"style="font-size:19px; color: black; aria-hidden:true"></i>
                            <% end %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                <% else %>
                  <div class="text-center pt-3 mt-3">
                    <div class="alert alert-warning">No Records Found</div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>



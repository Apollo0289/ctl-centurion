<div class="container pb-4">
  <div class="row">
    <div class="col-md-12">
      <%= render 'surveyors/settings_menu' %>
    </div>
    <div class="col-md-12">
      <div class="ui-block shadow">
        <div class="ui-block-title">
          <h5>
            <div class="row">
              <div class="col-md-6">
                <div class="text-left">
                  <%= link_to stylesheets_path, class: 'btn btn-primary' do %>
                    All Stylesheets
                  <% end %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="text-right">
                  <%= link_to edit_stylesheet_path(@stylesheet), class: 'btn btn-primary' do %>
                    Edit
                  <% end %>
                </div>
              </div>
            </div>
          </h5>
        </div>
        <div class="ui-block-content">
          <% if @stylesheet.present? %>
            <div class="row pt-3">

              <div class="col-md-3"><b class="card-title">Unique Id: </b></div>
              <div class="col-md-3"><%= @stylesheet.unique_id %></div>

              <div class="col-md-3"><b class="card-title">Name: </b></div>
              <div class="col-md-3"><%= @stylesheet.name %></div>

              <div class="col-md-3"><b class="card-title">Stylesheet Type: </b></div>
              <div class="col-md-3"><%= @stylesheet.stylesheet_type %></div>

              <div class="col-md-3"><b class="card-title">Output Extension: </b></div>
              <div class="col-md-3"><%= @stylesheet.output_extension %></div>

              <div class="col-md-3"><b class="card-title">Label: </b></div>
              <div class="col-md-3"><%= @stylesheet.label %></div>

              <div class="col-md-3"><b class="card-title">Output Storage Path: </b></div>
              <div class="col-md-3"><%= @stylesheet.path %></div>

              <div class="col-md-3"><b class="card-title">Stylesheet File: </b></div>
              <div class="col-md-3">
                <% if @stylesheet.file.attached? %>
                  <%= link_to @stylesheet.label || 'file', rails_blob_path(@stylesheet.file, disposition: "attachment"), class: 'pt-0 pl-0 pb-0 btn btn-link'%>
                <% else %>
                  No file
                <% end %>
              </div>

              <div class="col-md-3"><b class="card-title">Slx Template: </b></div>
              <div class="col-md-3">
                <% if @stylesheet.slx_template.attached? %>
                  <%= link_to 'slx file', rails_blob_path(@stylesheet.slx_template, disposition: "attachment"), class: 'btn pb-0 pl-0 btn-link pt-0' %>
                <% else %>
                  No file
                <% end %>
              </div>

            </div>
          <% else %>
            There is no Stylesheet Found
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
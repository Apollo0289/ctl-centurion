<div class="modal fade" id="<%= id %>" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <div class="col-md-11 text-left pt-2">
            <h4 class="modal-title" id="mySmallModalLabel"><%= modal_title %></h4>
          </div>
          <div class="col-md-1 text-right pt-2 pr-0">
            <button type="button" class="btn btn-light close float-left" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
          </div>
      </div>
      <div class="modal-body">
        <%= form_for model_object, url: url do |form| %>
          <%= render "#{directory}/form_fields", form: form %>
          <div class="form-group">
            <%= form.submit "Create", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>